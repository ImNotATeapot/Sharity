<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/listCenterImageView"
        android:layout_width="@dimen/center_image_size"
        android:layout_height="@dimen/center_image_size"
        android:layout_margin="16dp"
        android:background="@drawable/googleg_standard_color_18"
        android:padding="16dp"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:id="@+id/center_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/listNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="TextView"
            android:textSize="@dimen/bold_font_size"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pinImageView"
                android:layout_width="@dimen/pin_width"
                android:layout_height="@dimen/pin_height"
                android:layout_margin="4dp"
                app:srcCompat="@drawable/ic_pin" />

            <TextView
                android:id="@+id/listAddressTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:text="TextView"
                tools:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/listHoursTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="TextView" />
    </LinearLayout>
</LinearLayout>